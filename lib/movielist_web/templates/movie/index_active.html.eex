
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Genre</th>
      <th>Release date</th>
      <th>Pre rating</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for result <- @movies do %>
    <% movie = result[:movie] %>
      <tr class="<%= css_class_for_release_status(result[:release_status]) %>">
        <td></td>
        <td><%= movie.title %></td>
        <td><%= MovielistWeb.GenreView.to_s(movie.genre) %></td>
        <td><%= MovielistWeb.SharedView.us_formatted_date(movie.home_release_date) %></td>
        <td><%= movie.pre_rating %></td>

        <td>
          <%= link "Show", to: Routes.movie_path(@conn, :show, movie), class: "btn btn-xs btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
